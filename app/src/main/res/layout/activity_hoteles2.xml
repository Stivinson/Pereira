<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:id="@+id/imagenH"
        android:src="@drawable/pereira"
        android:layout_weight="0.6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:text="@string/Pereira"
            android:textColor="@color/greenyellow"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:id="@+id/tdireccionH"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="1dp"
            android:text="prueba"
            android:textColor="@color/greenyellow"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:id="@+id/tinformacionH"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:id="@+id/imagenflechasH"
        android:src="@drawable/flechas"
        android:layout_weight="1"/>

</LinearLayout>